<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073"
        tools:text="@string/numero01" />

    <EditText
        android:id="@+id/edtNumero01"
        android:layout_width="335dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edtNumero02"
        android:layout_width="334dp"
        android:layout_height="62dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="@string/numero02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero01"
        tools:text="@string/numero02" />

    <Button
        android:id="@+id/btnSomar"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:onClick="calcular"
        android:text="@string/btnSoma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero02" />

    <Button
        android:id="@+id/btnSubtrair"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="16dp"
        android:onClick="calcular"
        android:text="@string/btnSubtrair"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero02" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="88dp"
        android:onClick="calcular"
        android:text="@string/btnMultiplicar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero02" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="88dp"
        android:onClick="calcular"
        android:text="@string/btnDividir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNumero02" />

</androidx.constraintlayout.widget.ConstraintLayout>